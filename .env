# =================================================================
# DATENBANK
# =================================================================
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/ankauf_verkauf_db"

# =================================================================
# E-MAIL KONFIGURATION
# =================================================================
# SMTP Server
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-specific-password"
SMTP_SECURE="true"
MAIL_FROM="noreply@yourcompany.com"
MAIL_FROM_NAME="Ankauf-Verkauf Portal"

# =================================================================
# VERSANDDIENSTLEISTER
# =================================================================
# DHL
DHL_API_KEY="dhl_api_key_here"
DHL_API_SECRET="dhl_api_secret_here"
DHL_ACCOUNT_NUMBER="dhl_account_number"

# Hermes
HERMES_API_KEY="hermes_api_key_here"
HERMES_USER_ID="hermes_user_id"

# DPD
DPD_API_KEY="dpd_api_key_here"
DPD_CUSTOMER_NUMBER="dpd_customer_number"

# GLS
GLS_API_KEY="gls_api_key_here"
GLS_CUSTOMER_ID="gls_customer_id"

# =================================================================
# BENACHRICHTIGUNGSDIENSTE
# =================================================================
# SMS (Twilio)
TWILIO_ACCOUNT_SID="twilio_account_sid_here"
TWILIO_AUTH_TOKEN="twilio_auth_token_here"
TWILIO_PHONE_NUMBER="+491234567890"

# Push-Benachrichtigungen
VAPID_PUBLIC_KEY="vapid_public_key_here"
VAPID_PRIVATE_KEY="vapid_private_key_here"
VAPID_SUBJECT="mailto:your-email@yourcompany.com"

# =================================================================
# AUTHENTIFIZIERUNG
# =================================================================
# NextAuth.js
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="generate-a-secure-32-character-secret-here"
JWT_SECRET="generate-another-secure-32-character-secret"

# =================================================================
# ANWENDUNGSKONFIGURATION
# =================================================================
# Umgebung
NODE_ENV="development"

# API Limits
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW_MS="900000"

# Feature Flags
ENABLE_SMS_NOTIFICATIONS="true"
ENABLE_PUSH_NOTIFICATIONS="true"
ENABLE_WHATSAPP_NOTIFICATIONS="false"
ENABLE_INTERNATIONAL_SHIPPING="true"

# =================================================================
# STORAGE
# =================================================================
# AWS S3 (optional, für Dateispeicherung)
AWS_ACCESS_KEY_ID="aws_access_key_here"
AWS_SECRET_ACCESS_KEY="aws_secret_key_here"
AWS_REGION="eu-central-1"
AWS_BUCKET_NAME="your-bucket-name"

# =================================================================
# LOGGING
# =================================================================
LOG_LEVEL="debug"

# =================================================================
# STRIPE (optional, für Zahlungen)
# =================================================================
STRIPE_PUBLIC_KEY="stripe_public_key_here"
STRIPE_SECRET_KEY="stripe_secret_key_here"
STRIPE_WEBHOOK_SECRET="stripe_webhook_secret_here" 